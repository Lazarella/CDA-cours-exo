FROM nginx

LABEL maintainer="Lazare"

WORKDIR /usr/share/nginx/html

RUN rm -rf /usr/share/nginx/html/

RUN apt update && apt install git -y

RUN git clone https://github.com/Lazarella/testDocker.git .

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]